{
  "name": "opencage-api-client",
  "version": "2.0.0-alpha.1",
  "description": "An OpenCageData Geocoder API client library for node and browsers (UMD)",
  "keywords": [
    "geocoder",
    "api",
    "opencage",
    "opencagedata"
  ],
  "author": "Arnaud Ferrand",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsamaya/opencage-api-client.git"
  },
  "bugs": {
    "url": "https://github.com/tsamaya/opencage-api-client/issues"
  },
  "homepage": "https://github.com/tsamaya/opencage-api-client#readme",
  "type": "module",
  "types": "dist/index.d.ts",
  "main": "dist/opencage-api.cjs",
  "module": "dist/opencage-api.mjs",
  "browser": "dist/opencage-api.umd.js",
  "unpkg": "dist/opencage-api.umd.js",
  "exports": {
    "require": "./dist/opencage-api.cjs",
    "default": "./dist/opencage-api.modern.js"
  },
  "scripts": {
    "build": "pnpm run build:node && pnpm run build:browser",
    "build:node": "microbundle",
    "build:browser": "microbundle -f umd -i src/browser.ts -o dist/opencage-api.umd.js --name opencage --no-pkg-main --generateTypes false",
    "dev": "microbundle watch",
    "docs": "typedoc",
    "format": "pnpm run lint:fix && prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release:changelog": "tsx ./scripts/valid-changelog.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui --coverage.enabled=true"
  },
  "devDependencies": {
    "@types/node": "20.14.0",
    "@typescript-eslint/eslint-plugin": "7.11.0",
    "@typescript-eslint/parser": "7.11.0",
    "@vitest/coverage-v8": "1.6.0",
    "@vitest/ui": "1.6.0",
    "eslint": "8.57",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "microbundle": "^0.15.1",
    "prettier": "3.3.0",
    "tsx": "4.11.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5",
    "vite": "5.2.12",
    "vitest": "1.6.0"
  },
  "dependencies": {
    "dotenv": "16.4.5"
  },
  "lint-staged": {
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.js": "eslint --cache --fix"
  }
}
